#Acá se puede ver si un número es primo o no
#evidentemente está incompleto, ya que no lo entiendo
#sigue adquieriendo conocimientos para comprenderlo
#xD

num = (input('Inserte un número: '))

def isPrime(num):
    if num < 0:
        print("No se permiten números negativos")
    
    else:    
        if num == 2:
            return True
        else:
            for i in range(2, num):
                if num % i == 0:
                    return False
            return True            

def app():

    result = isPrime(num)

    if result is True:
        print('Es un número primo')
    else:
        print('Es un número compuesto')

if __name__ == '__main__':
    app()
